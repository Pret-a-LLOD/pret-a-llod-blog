<head>
    <style>
        .navbar a:hover {
          border-bottom: 3px solid red;
        }

    </style>
    <link rel="stylesheet" href="{{BASE_FOLDER}}/static/bootstrap.min.css" integrity="">
</head>
<nav class="navbar navbar-expand-sm bg-dark navbar-dark">
  <!-- Brand/logo -->
  <a class="navbar-brand" href="#">
    <img src="{{BASE_FOLDER}}/static/img.jpg" alt="logo" style="height:50px">
  </a>
  
  <!-- Links -->
  <ul class="navbar-nav">
    {% for page_name, page_dict in pages.items() %}        
      <li class="nav-item">
          {% if page_name != "index" %}
              <a class="nav-link" href="{{BASE_FOLDER}}/pages/{{ page_dict['slug'] }}.html">{{page_dict['title']}}</a>
          {% else %}
              <a class="nav-link" href="{{BASE_FOLDER}}/{{ page_dict['slug'] }}.html">{{page_dict['title']}}</a>
          {% endif %}
        </li>
    {% endfor %}
  </ul>
</nav>
