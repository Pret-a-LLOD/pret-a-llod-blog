<head>
    <style>
        .navbar a:hover {
          border-bottom: 3px solid red;
          color: #333;
        }
        .navbar a {
          text-transform:capitalize;
          color: #333;
        }
        .navbar {
          border-bottom: 1px dashed #aaa;
          border-top: 1px dashed #aaa;
          margin: 5px;
        }
    </style>
    <link rel="stylesheet" href="{{BASE_FOLDER}}/static/bootstrap.min.css" integrity="">
</head>
<nav class="navbar navbar-expand-sm">
  <div class="container-fluid">
  <!-- Brand/logo -->
  <a class="navbar-brand" href="#">
    <img src="{{BASE_FOLDER}}/static/img.jpg" alt="logo" style="height:100px">
  </a>
  
  <!-- Links -->
  <ul class="nav navbar-nav navbar-right">
    {% for page_name, page_dict in pages.items() %}        
      <li class="nav-item">
          {% if page_name != "index" %}
              <a class="nav-link" href="{{BASE_FOLDER}}/pages/{{ page_dict['slug'] }}.html">{{page_dict['title']}}</a>
          {% else %}
              <a class="nav-link" href="{{BASE_FOLDER}}/{{ page_dict['slug'] }}.html">{{page_dict['title']}}</a>
          {% endif %}
        </li>
    {% endfor %}
  </ul>
  </div>
</nav>
