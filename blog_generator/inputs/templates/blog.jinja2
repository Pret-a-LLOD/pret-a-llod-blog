<html>
{% if template_name != "index" %}
    {% set BASE_FOLDER = ".." %}
{% else %}
    {% set BASE_FOLDER = "." %}
{% endif %}
<head>
<style>
    .container {
        margin-top: 5%;
    }
    .feature {
        display: block;
        width: 100%;
        margin: 0;
    }

    .author {
        font-style: italic;
        line-height: 1.3;
        color: #aab6aa;
    }

    .blog-stripe .block-title {
        background: black;
        width: 100%;
        color: white;
        height: 100px;
        padding-top: 20px;
    }

    .all-blogs .media {
        margin-left: -40px;
        padding-bottom: 20px;
        border-bottom: 1px solid #CCCCCC;
    }
</style>
    <link rel="stylesheet" href="{{BASE_FOLDER}}/static/bootstrap.min.css" integrity="">
</head>
<body>
{% include 'navbar.jinja2' %}
<div class="container">
    <div class="row">
            <div class="col-9">
            <ul class="all-blogs">
                {% for post_filename, post_dict in posts.items() %}
                <li class="media">
                    <a class="pull-left" href="#">
                        <img src="http://placehold.it/200x100" alt="...">
                    </a>
                    <div class="media-body">
                        <h4 class="media-heading"><a href="{{BASE_FOLDER}}/posts/{{post_dict['slug']}}.html">{{post_dict['title']}}</a></h4>
                        <!--<p class="author">Mike Smith</p>-->
                    </div>
                </li>
                {% endfor %}
            </ul>
        </div>
        <div class="col-3">
            <a class="twitter-timeline" data-width="420" data-height="500" href="https://twitter.com/pret_a_llod?ref_src=twsrc%5Etfw">Tweets by pret_a_llod</a> <script async src="https://platform.twitter.com/widgets.js" charset="utf-8"></script>
        </div>
    </div>
</div>

{% include 'footer.jinja2' %}
</body>
</html>
